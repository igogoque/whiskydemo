@model whiskyshop.Models.Purchase

<table width="100%" border="0"><tr><td width="1%"></td><td>
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend class="cattitle">Добавить в корзину @ViewBag.ProdName</legend>

            @Html.HiddenFor(model => model.Product.id)
            @Html.HiddenFor(model => model.buydate)

        <div class="editor-label">
            @Html.LabelFor(model => model.qnty)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.qnty)
            @Html.ValidationMessageFor(model => model.qnty)
        </div>

            @Html.HiddenFor(model => model.summa)
            @Html.HiddenFor(model => model.status)
            @Html.HiddenFor(model => model.UserId)
        
        <br/>    <input type="submit" value="Добавить в корзину" />
        
    </fieldset>
}
    </td></tr></table>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
